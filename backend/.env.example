# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
DB_NAME=attendance_system

# JWT Authentication (Generate your own: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=REPLACE_WITH_YOUR_OWN_RANDOM_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Face Recognition Models (Docker paths)
YOLO_MODEL_PATH=/app/models/yolov8n-face.onnx
ARCFACE_MODEL_PATH=/app/models/arcface_resnet100.onnx

# Face Recognition Thresholds
FACE_DETECTION_THRESHOLD=0.45
RECOGNITION_MATCH_THRESHOLD=0.32

# Upload Settings
MAX_UPLOAD_SIZE=10485760

# Optional: Production MongoDB (MongoDB Atlas)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=Cluster0
# DB_NAME=face_attendance

# Optional: AWS S3 for storing images
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
# AWS_REGION=ap-southeast-1
# S3_BUCKET_NAME=face-attendance-bucket
